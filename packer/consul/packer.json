{
  "builders": [
    {
      "name": "aws",
      "type": "amazon-ebs",
      "region": "{{user `aws-region`}}",
      "source_ami": "{{user `aws-source-ami`}}",
      "instance_type": "t2.medium",
      "ssh_username": "core",
      "ami_name": "consul-coreos-{{timestamp}}"
    },
    {
      "name": "vbox",
      "type": "virtualbox-ovf",
      "source_path": "{{user `ovf-source-path`}}",
      "ssh_username": "core",
      "output_directory": "builds/consul",
      "headless": true,
      "ssh_key_path": "./vagrant_private_key",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_port": 22,
      "ssh_wait_timeout": "5m",
      "vm_name": "consul-packer",
      "shutdown_command": "sudo -S shutdown -P now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "guest_additions_mode": "disable"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/consul-manage",
      "destination" : "/tmp/consul-manage"
    },
    {
      "type": "file",
      "source": "scripts/consul.service",
      "destination" : "/tmp/consul.service"
    },
    {
      "type": "file",
      "source": "scripts/consul.path",
      "destination" : "/tmp/consul.path"
    },
    {
      "type": "file",
      "source": "scripts/consul-members.service",
      "destination" : "/tmp/consul-members.service"
    },
    {
      "type": "file",
      "source": "scripts/consul-members.timer",
      "destination" : "/tmp/consul-members.timer"
    },
    {
      "type": "file",
      "source": "scripts/docker-configurator",
      "destination" : "/tmp/docker-configurator"
    },
    {
      "type": "file",
      "source": "scripts/docker-configurator.service",
      "destination" : "/tmp/docker-configurator.service"
    },
    {
      "type": "file",
      "source": "scripts/docker-configurator.path",
      "destination" : "/tmp/docker-configurator.path"
    },
    {
      "type": "file",
      "source": "scripts/docker.path",
      "destination" : "/tmp/docker.path"
    },
    {
      "type": "shell",
      "scripts": [ "scripts/fini.sh" ]
    },
    {
      "type": "shell",
      "scripts": [ "scripts/aws-fini.sh" ],
      "only": ["aws"]
    }
  ],
 "post-processors": [
    {
      "type": "vagrant",
      "output": "./builds/consul-coreos.box",
      "keep_input_artifact": true
    }
  ],
  "variables": {
    "aws-region": "eu-west-1",
    "aws-source-ami": "ami-7b971208",
    "ovf-source-path": "./builds/coreos/base.ovf"
  }
}
